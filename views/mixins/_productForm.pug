mixin productForm(product = {})
    form(action=`/admin/add/${product._id || ''}` method='POST' enctype='multipart/form-data')
        label(for='name') Name
        input(type='text' name='name' value=product.name)
        label(for='description') Description
        textarea(name='description')= product.description
        label(for='price') Price
        input(type='number' step='0.01' name='price' value=product.price)
        label(for='thc') THC %
        input(type='number' step='0.01' name='thc' value=product.thc)
        label(for='cbd') CBD %
        input(type='number' step='0.01' name='cbd' value=product.cbd)
        label(for='photo') Photo
            input(type='file' name='photo' accept='image/gif, image/png, image/jpeg')
            if product.photo
                img(src=`/uploads/${product.photo}` alt=product.name width=200)
        input(type='submit' value='Save')
        if product._id
            a(href="javascript: history.go(-1)")
                button(type='button') Go Back

                